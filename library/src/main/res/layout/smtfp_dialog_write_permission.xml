<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smtfp_write_permissions_dialog_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/smtfp_activity_margin">

    <TextView
        android:id="@+id/smtfp_write_permissions_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smtfp_activity_margin"
        android:text="@string/smtfp_confirm_storage_access_text"/>

    <ImageView
        android:id="@+id/smtfp_write_permissions_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/smtfp_write_storage"/>

</LinearLayout>
